package src;
import java.util.Scanner;
public class Main {
     public static void main(String[] args){
        Scanner scanner = new Scanner(System.in);
            int exitnumber = 1;
            while (exitnumber == 1){
            try{
                    System.out.print("Please enter the number that corresponds to the operation you want: 1 for addition, 2 for subtraction, 3 for multiplication, 4 for division. If you wish to do another operation, press 5: ");
                    String op = scanner.nextLine();
                    int operation = Integer.parseInt(op);
                    if (operation <= 4){
                        System.out.print("Please enter your first number:");
                        String numOne = scanner.nextLine();
                        double numone = Double.parseDouble(numOne);
                        System.out.print("Please enter your second number:");
                        String numTwo = scanner.nextLine();
                        double numtwo = Double.parseDouble(numTwo);
                        switch (operation) {
                            case 1: {
                            System.out.println("Answer: " + (numone + numtwo));
                            break;
                            }
                            case 2: {
                            System.out.println("Answer: " + (numone - numtwo));
                            break;
                            }
                            case 3: {
                            System.out.println("Answer: " + (numone * numtwo));
                            break;
                            }
                            case 4: {
                            if (numtwo == 0){
                            System.out.println("Error: Cannot divide by 0. Retry with a number other than 0.");
                            }
                            else{
                            System.out.println("Answer: " + (numone / numtwo));
                            System.out.println("Remainder: " + (numone % numtwo));
                            }
                            break;
                        }
                            default: {
                            }
                            }
                        }
                        else if (operation == 5){
                            System.out.print("Please enter the number that corresponds to the operation you want: 1 for square root, 2 for squaring, 3 for the sin, 4 for the cos, 5 for the tan, 6 the natural log, 7 for the exponential: ");
                            String optwo = scanner.nextLine();
                            int operationtwo = Integer.parseInt(optwo);
                
                            System.out.println("Please enter your number:");
                            String numFirst = scanner.nextLine();
                            double x = Double.parseDouble(numFirst);
                
                            while (exitnumber <= 2){
                                try{
                            switch(operationtwo){
                                case 1: {
                                    if (x < 0){
                                        System.out.println("Error: Cannot square root a negative number. Retry with a number other than a negative number.");
                                    }
                                    else{
                                    System.out.println(Math.sqrt(x));
                                    exitnumber = 3;
                                }
                                    break;
                                }
                                case 2: {
                                    System.out.println(x * x);
                                    exitnumber = 3;
                                    break;
                                }
                                case 3: {
                                    System.out.println(Math.sin(x));
                                    exitnumber = 3;
                                    break;
                                }
                                case 4: {
                                    System.out.println(Math.cos(x));
                                    exitnumber = 3;
                                    break;
                                }
                                case 5:{
                                    System.out.println(Math.tan(x));
                                    exitnumber = 3;
                                    break;
                                }
                                case 6: {
                                    if ( x <= 0){
                                        System.out.println("Error: Cannot take that natural log of 0, or a negative number. Retry with a different number.");
                                    }
                                    else{
                                    System.out.println(Math.log(x));
                                    exitnumber = 3;
                                    }
                                    break;
                                }
                                case 7: {
                                    System.out.println(Math.exp(x));
                                    exitnumber = 3;
                                    break;
                                }
                            }
                        }
                        finally { }
                        }
                        System.out.println("Thank you. If you wish to continue using the calculator, press 1. If you wish to exit, press 2.");
                        String exitnum = scanner.nextLine();
                        exitnumber = Integer.parseInt(exitnum);
                        }
                    }
                    catch (NumberFormatException e) {
                        System.out.println("Please enter a valid number.");
                        System.out.println("If you wish to continue using the calculator, press 1. If you wish to exit, press 2.");
                        String exitnum = scanner.nextLine();
                        exitnumber = Integer.parseInt(exitnum);
                    }
                }
        if (exitnumber == 2){
        System.out.println("Now exiting.");
        }
        scanner.close();
            }
        }
